/* 首页导航 */
.banner_dh{

}
.nav_list{
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_list_item{
  display: inline-block;
  padding: 10rpx 1rpx;
  margin: 0rpx 30rpx;
  font-size: 30rpx;
  letter-spacing: 5rpx;
}
.nav_list_item.active{
  border-bottom: 5rpx solid #ff5c7c;
  font-weight: bold;
  color: #ff5c7c;
}
/* 轮播图样式 */
.slide{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 0rpx 10rpx;
}
.slide navigator{
  width: 100%;
  height: 100%;
}
.slide swiper-item{
  width: 100%;
  height: 100%;
}
.slide swiper-item image{
  height: 100%;
  width: 100%;
  border-radius: 10rpx;
}

/* 视频列表 */
.video_wrap{
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  justify-content: space-between;
  margin-bottom: 5rpx;
}
.video_item{
  width: 48%;
  margin-bottom: 10rpx;
}
.video_img{
  position: relative;
}
.video_img image{
  width: 100%;
  border-radius: 10rpx;
}
.video_info{
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size: 24rpx;
}
.video_title{ 
  font-size: 25rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-break: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #333;
}